{
  "compilerOptions": {
    "removeComments": true,
    "preserveConstEnums": true,
    "jsx": "preserve",
    "pretty": true,
    "sourceMap": true,
    "target": "es2015",
    "outDir": "lib",
    "strictNullChecks": false,
    "moduleResolution": "node",
    "allowJs": true,
    "lib": ["ES2017", "DOM"],
    "noUnusedLocals": true
  },
  "exclude": [
    "node_modules",
    "dist"
  ],
  "include": [
    "./src/**/*.ts",
    "./src/**/*.tsx",
    "./typings/custom.d.ts"
  ],
  "awesomeTypescriptLoaderOptions": {
    "useCache": true,
    "useBabel": true
  }
}
