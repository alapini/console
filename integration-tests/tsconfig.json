{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "noImplicitAny": false,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "lib": ["ES2017", "DOM"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "paths": {
      "*": [
        "node_modules/*"
      ]
    }
  }
}